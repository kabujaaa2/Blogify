# Server Configuration
NODE_ENV=development
PORT=12001
FRONTEND_URL=http://localhost:12000
API_URL=http://localhost:12001/api

# MongoDB Connection
# Local MongoDB
MONGODB_URI=mongodb://localhost:27017/blogify
# MongoDB Atlas:
# MONGODB_URI=mongodb+srv://<username>:<password>@<cluster-url>/blogify
# Docker Compose:
# MONGODB_URI=mongodb://mongodb:27017/blogify

# Authentication
JWT_SECRET=your-secure-jwt-secret-key
JWT_EXPIRES_IN=7d
REFRESH_TOKEN_SECRET=your-refresh-token-secret
REFRESH_TOKEN_EXPIRES_IN=30d

# CORS Configuration
CORS_ORIGIN=http://localhost:12000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes in milliseconds
RATE_LIMIT_MAX=100  # Maximum 100 requests per window

# Logging
LOG_LEVEL=dev  # Options: dev, combined, common, short, tiny

# Optional: Email Configuration (for password reset, notifications)
# EMAIL_SERVICE=gmail
# EMAIL_USER=your-email@gmail.com
# EMAIL_PASSWORD=your-app-password
# EMAIL_FROM=Blogify <your-email@gmail.com>

# Optional: Cloud Storage (for image uploads)
# CLOUD_NAME=your-cloudinary-name
# CLOUD_API_KEY=your-cloudinary-api-key
# CLOUD_API_SECRET=your-cloudinary-api-secret

# Optional: File Upload (local storage)
# UPLOAD_DIR=uploads
# MAX_FILE_SIZE=5242880  # 5MB in bytes

# Optional: Security
# ENABLE_HELMET=true
# ENABLE_XSS_PROTECTION=true
# ENABLE_CONTENT_SECURITY_POLICY=true